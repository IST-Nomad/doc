sudo apt-get update
sudo apt-get install ntp
sntp --version

//server
sudo nano /etc/ntp.conf

/*
pool 0.ru.pool.ntp.org iburst
pool 1.ru.pool.ntp.org iburst
pool 2.ru.pool.ntp.org iburst
pool 3.ru.pool.ntp.org iburst
*/

sudo service ntp restart
sudo service ntp status
sudo ufw allow from any to any port 123 proto udp

#client
sudo apt update
sudo apt install ntp
sudo nano /etc/ntpsec/ntp.conf

sudo systemctl start ntp
sudo systemctl enable ntp

server 10.129.135.110 prefer iburst
//где ntp-host — адрес нашего NTP-сервера
sudo service ntp restart

//Проверяем, правильно ли сервер отдает время:
ntpdate ntp-host
//где ntp-host — адрес нашего NTP-сервера



#Альтернативный ntp клиент 
sudo apt install chrony


#Список часовых поясов
timedatectl list-timezones
#Изменить часовой пояс
sudo timedatectl set-timezone Asia/Irkutsk
#Проверка
timedatectl