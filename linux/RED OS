
#Обновление 
dnf update

#Установка Docker 
dnf install docker-ce docker-ce-cli docker-compose

#Установите zabbix-agent:
dnf install zabbix-agent

#Настройте файл конфигурации:
nano /etc/zabbix/zabbix_agentd.conf
Server=<ip-адрес_сервера>

#Запустите сервис и добавьте его в автозапуск:
systemctl enable zabbix-agent
systemctl start zabbix-agent
systemctl status zabbix-agent

#Ограничение логирования systemd-journald

sudo nano /etc/systemd/journald.conf

[Journal]
SystemMaxUse=1G
SystemMaxFileSize=100M
SystemMaxFiles=10
MaxRetentionSec=1week

sudo systemctl restart systemd-journald